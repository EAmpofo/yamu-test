{% schema %}
{
  "name": "Grid Collage",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Share your setup with"
    },
    {
      "type": "text",
      "id": "hashtag",
      "label": "Hashtag",
      "default": "#Funitura_Furniture"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 9,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        },
        {
          "type": "select",
          "id": "position",
          "label": "Grid Position",
          "options": [
            {
              "value": "left-tall",
              "label": "Left Tall"
            },
            {
              "value": "top-wide",
              "label": "Top Wide"
            },
            {
              "value": "center-square",
              "label": "Center Square"
            },
            {
              "value": "bottom-wide",
              "label": "Bottom Wide"
            },
            {
              "value": "right-tall",
              "label": "Right Tall"
            },
            {
              "value": "small-square",
              "label": "Small Square"
            }
          ],
          "default": "center-square"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Grid Collage",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .grid-collage {
    padding: var(--section-padding);
    margin: 0 auto;
    max-width: 1400px;
  }

  .grid-collage__header {
    text-align: center;
    margin-bottom: 3.5rem;
  }

  .grid-collage__heading {
    margin: 0;
    font-size: 1.8rem;
    font-weight: 400;
    line-height: 1.3;
    color: rgb(var(--color-foreground));
  }

  .grid-collage__hashtag {
    font-size: 3.2rem;
    font-weight: 600;
    margin: 0.5rem 0 0;
    color: rgb(var(--color-foreground));
    letter-spacing: -0.02em;
  }

  .grid-collage__grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-template-rows: repeat(12, 1fr);
    gap: 1.5rem;
    aspect-ratio: 16/9;
    position: relative;
  }

  .grid-collage__item {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
    background: rgb(var(--color-background));
  }

  /* Grid Position Classes */
  .grid-collage__item--left-tall {
    grid-column: 1 / span 3;
    grid-row: 1 / span 12;
  }

  .grid-collage__item--top-wide {
    grid-column: 4 / span 6;
    grid-row: 1 / span 6;
  }

  .grid-collage__item--center-square {
    grid-column: 4 / span 3;
    grid-row: 7 / span 6;
  }

  .grid-collage__item--bottom-wide {
    grid-column: 7 / span 3;
    grid-row: 7 / span 6;
  }

  .grid-collage__item--right-tall {
    grid-column: 10 / span 3;
    grid-row: 1 / span 12;
  }

  .grid-collage__item--small-square {
    grid-column: span 3;
    grid-row: span 3;
  }

  .grid-collage__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.215, 0.61, 0.355, 1);
  }

  .grid-collage__link {
    display: block;
    height: 100%;
    width: 100%;
  }

  .grid-collage__link:hover .grid-collage__image {
    transform: scale(1.05);
  }

  @media screen and (max-width: 989px) {
    .grid-collage__grid {
      gap: 1rem;
    }

    .grid-collage__hashtag {
      font-size: 2.8rem;
    }

    .grid-collage__item--left-tall,
    .grid-collage__item--right-tall {
      grid-column: span 6;
      grid-row: span 8;
    }

    .grid-collage__item--top-wide,
    .grid-collage__item--center-square,
    .grid-collage__item--bottom-wide {
      grid-column: span 6;
      grid-row: span 6;
    }
  }

  @media screen and (max-width: 749px) {
    .grid-collage__grid {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      aspect-ratio: auto;
    }

    .grid-collage__item {
      aspect-ratio: 1;
    }

    .grid-collage__hashtag {
      font-size: 2.4rem;
    }

    .grid-collage__heading {
      font-size: 1.6rem;
    }
  }
</style>

<div
  class="grid-collage color-{{ section.settings.color_scheme }}"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="grid-collage__header">
    {% if section.settings.heading != blank %}
      <h2 class="grid-collage__heading">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.hashtag != blank %}
      <p class="grid-collage__hashtag">{{ section.settings.hashtag }}</p>
    {% endif %}
  </div>

  <div class="grid-collage__grid">
    {%- for block in section.blocks -%}
      {%- if block.settings.image != blank -%}
        <div
          class="grid-collage__item grid-collage__item--{{ block.settings.position }}"
          {{ block.shopify_attributes }}
        >
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="grid-collage__link">
          {%- endif -%}

          {% render 'image',
            class: 'grid-collage__image',
            image: block.settings.image,
            sizes: '(min-width: 990px) 25vw, (min-width: 750px) 50vw, 100vw'
          %}

          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>
