{{ 'grid-custom-collage.css' | asset_url | stylesheet_tag }}
<style>
  .collage-container{
    background-color: {{section.settings.colage_bg}};
  }
  .collage-header{
    color: {{section.settings.heading_text}};
    padding: {{section.settings.padding_size}}px;
  }
  .head_hastag{
    font-size: {{section.settings.heading_font_size}}px;
    font-weight: {{section.settings.heading_font_weight}}
  }
  .collage_hashtag{
    font-size: {{section.settings.description_font_size}}px;
    font-weight: {{section.settings.description_font_weight}}
  }
</style>

<section class="collage-container">
  <div class="collage-header">
    {% if section.settings.heading != blank %}
      <div class="head_hashtag">{{ section.settings.heading }}</div>
    {% endif %}
    {% if section.settings.hashtag != blank %}
      <div class="collage_hashtag">{{ section.settings.hashtag }}</div>
    {% endif %}
  </div>
  <div class="test-collage--grid">
    <div class="first">
      {% for block in section.blocks %}
        {% if forloop.index == 1 %}
          <div class="first--card">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: '720x' }}" alt="Collage Image" loading="lazy">
            {% endif %}
          </div>
        {% elsif forloop.index == 2 %}
          <div class="second--card">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: '720x' }}" alt="Collage Image" loading="lazy">
            {% endif %}
          </div>
        {% elsif forloop.index == 3 %}
          <div class="third--card">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: '720x' }}" alt="Collage Image" loading="lazy">
            {% endif %}
          </div>
        {% elsif forloop.index == 4 %}
          <div class="forth--card">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: '720x' }}" alt="Collage Image" loading="lazy">
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="second">
      {% if section.blocks.size > 4 %}
        <div class="fifth--card">
          {% if section.blocks[4].settings.image %}
            <img src="{{ section.blocks[4].settings.image | img_url: '720x' }}" alt="Collage Image" loading="lazy">
          {% endif %}
        </div>
      {% endif %}
    </div>
    <div class="third">
      {% for block in section.blocks offset: 5 %}
        {% if forloop.index == 1 %}
          <div class="sixth--card">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: '720x' }}" alt="Collage Image" loading="lazy">
            {% endif %}
          </div>
        {% elsif forloop.index == 2 %}
          <div class="seventh--card">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: '720x' }}" alt="Collage Image" loading="lazy">
            {% endif %}
          </div>
        {% elsif forloop.index == 3 %}
          <div class="eighth--card">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: '720x' }}" alt="Collage Image" loading="lazy">
            {% endif %}
          </div>
        {% elsif forloop.index == 4 %}
          <div class="ninth--card">
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | image_url: width: '720x' }}"
                alt="Collage Image"
                class="ninth-img"
                loading="lazy"
              >
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

