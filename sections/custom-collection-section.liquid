{{ 'custom-collection-section.css' | asset_url | stylesheet_tag }}

<div class="collection-section">
  <div class="collection-header">
    <h2>{{ section.settings.section_title }}</h2>
    <div>
      <p>{{ section.settings.section_description }}</p>
    </div>
  </div>

  <div class="collection-grid" style="grid-template-columns: repeat({{ section.settings.items_per_row }}, 1fr);">
    {% for block in section.blocks %}
      <div class="collection-item">
        <a href="{{ block.settings.link }}">
          <img src="{{ block.settings.image | image_url: width: 387 }}" alt="{{ block.settings.title }}" loading="lazy">
          <p>{{ block.settings.title }}</p>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .collection-header h2 {
    font-size: {{section.settings.heading_font_size}}rem;
    color: {{section.settings.head_title}};
    font-weight: {{section.settings.heading_font_weight}};
  }
  .collection-header p{
    font-size: {{section.settings.description_font_size}}rem;
    color: {{section.settings.description_title}};
    width: {{section.settings.width}}px;
    margin-bottom: {{section.settings.margin}}px;
  }
  .collection-item p {
    font-size: {{section.settings.img-tile_font_size}}px;
    font-weight: {{section.settings.img-tile_font_weight}};
    color: {{section.settings.img-tile-color}};
  }
</style>

{% schema %}
{
  "name": "Custom Collection",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Discover Our New Collection"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "From sleek, modern designs to timeless classics, each piece is crafted to enhance your living space and suit your unique style."
    },
    {
      "type": "range",
      "id": "items_per_row",
      "label": "Items per Row",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
          "type": "header",
          "content": "Description Info"
        },
        {
          "type": "color",
          "label": "Title",
          "id": "head_title",
          "default": "#333333"
        },
        {
          "type": "range",
          "id": "heading_font_size",
          "label": "Font Size",
          "default": 2.5,
          "min": 1,
          "max": 5,
          "step": 0.1,
          "unit": "rem"
        },
        {
          "type": "select",
          "id": "heading_font_weight",
          "label": "Heading Font Weight",
          "options": [
            { "value": "100", "label": "Thin" },
            { "value": "200", "label": "Extra Light" },
            { "value": "300", "label": "Light" },
            { "value": "400", "label": "Normal" },
            { "value": "500", "label": "Medium" },
            { "value": "600", "label": "Semi-Bold" },
            { "value": "700", "label": "Bold" },
            { "value": "800", "label": "Extra Bold" },
            { "value": "900", "label": "Black" }
          ],
          "default": "400"
        },
        {
          "type": "color",
          "label": "Description",
          "id": "description_title",
          "default": "#666666"
        },
        {
          "type": "range",
          "id": "description_font_size",
          "label": "Font Size",
          "default": 1,
          "min": 1,
          "max": 5,
          "step": 0.1,
          "unit": "rem"
        },
    {

      "type": "range",
      "id": "width",
      "min": 0,
      "max": 1200,
      "step": 40,
      "unit": "px",
      "label": "Description width",
      "default": 480
    },
    {

      "type": "range",
      "id": "margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Margin",
      "default": 20
    },
    {
          "type": "color",
          "label": "Image Tile Color",
          "id": "img-tile-color",
          "default": "#333333"
        },
     {
          "type": "range",
          "id": "img-tile_font_size",
          "label": "Image tile",
          "default": 16,
          "min": 1,
          "max": 50,
          "step": 1,
          "unit": "px"
        },
    {
          "type": "select",
          "id": "img-tile_font_weight",
          "label": "Image tile font",
          "options": [
            { "value": "100", "label": "Thin" },
            { "value": "200", "label": "Extra Light" },
            { "value": "300", "label": "Light" },
            { "value": "400", "label": "Normal" },
            { "value": "500", "label": "Medium" },
            { "value": "600", "label": "Semi-Bold" },
            { "value": "700", "label": "Bold" },
            { "value": "800", "label": "Extra Bold" },
            { "value": "900", "label": "Black" }
          ],
          "default": "400"
        },

  ],
  "blocks": [
    {
      "type": "collection_item",
      "name": "Collection Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Item Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Item Title",
          "default": "Dining"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },


      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Section with Rows",
      "category": "Custom"
    }
  ]
}
{% endschema %}
